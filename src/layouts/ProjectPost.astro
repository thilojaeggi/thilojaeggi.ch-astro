---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import TechChip from "../components/TechChip.astro";

type Props = CollectionEntry<"projects">["data"];

const {
    title,
    description,
    client,
    year,
    technologies,
    links,
    stats,
    pubDate,
} = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>
    <body>
        <Header />
        <main class="w-full max-w-5xl mx-auto px-4 py-8">
            <div
                class="h-full w-full"
                transition:name={`project-card-${title}`}
            >
                <div
                    class="py-2 w-full sticky backdrop-blur-md top-0 z-10 flex flex-row items-center justify-between"
                >
                    <h1
                        class="text-6xl font-bold w-fit text-black"
                        transition:name={`project-title-${title}`}
                    >
                        {title}
                    </h1>
                    <div class="flex flex-col items-end justify-end">
                        {
                            year && (
                                <div
                                    class="w-fit"
                                    transition:name={`project-year-${title}`}
                                >
                                    <span class="text-gray-600">{year}</span>
                                </div>
                            )
                        }
                        {
                            client && (
                                <div
                                    class="w-fit"
                                    transition:name={`project-client-${title}`}
                                >
                                    <span class="text-gray-600">{client}</span>
                                </div>
                            )
                        }
                    </div>
                </div>
                <div class="pl-2">
                    <div class="flex flex-wrap gap-4 mt-1 items-center">
                        {
                            stats &&
                                stats.map((stat) => (
                                    <div class="bg-gray-100 px-3 py-1 rounded-md border border-gray-200">
                                        <span class="font-bold text-gray-900">
                                            {stat}
                                        </span>
                                    </div>
                                ))
                        }
                    </div>

                    {
                        technologies && (
                            <div class="flex flex-wrap gap-4 mt-4 mb-2">
                                {technologies.map((tech) => (
                                    <TechChip
                                        name={tech.name}
                                        icon={tech.icon}
                                    />
                                ))}
                            </div>
                        )
                    }

                    <div class="flex flex-row items-center mt-6">
                        {
                            links?.github && (
                                <a
                                    target="_blank"
                                    class="fill-black hover:scale-110 duration-200 w-12 h-12 inline-block"
                                    href={links.github}
                                >
                                    <svg
                                        class="fill-black w-12 h-12 hover:scale-110 duration-200"
                                        xmlns="http://www.w3.org/2000/svg"
                                        x="0px"
                                        y="0px"
                                        viewBox="0 0 24 24"
                                    >
                                        <path d="M10.9,2.1c-4.6,0.5-8.3,4.2-8.8,8.7c-0.6,5,2.5,9.3,6.9,10.7v-2.3c0,0-0.4,0.1-0.9,0.1c-1.4,0-2-1.2-2.1-1.9 c-0.1-0.4-0.3-0.7-0.6-1C5.1,16.3,5,16.3,5,16.2C5,16,5.3,16,5.4,16c0.6,0,1.1,0.7,1.3,1c0.5,0.8,1.1,1,1.4,1c0.4,0,0.7-0.1,0.9-0.2 c0.1-0.7,0.4-1.4,1-1.8c-2.3-0.5-4-1.8-4-4c0-1.1,0.5-2.2,1.2-3C7.1,8.8,7,8.3,7,7.6C7,7.2,7,6.6,7.3,6c0,0,1.4,0,2.8,1.3 C10.6,7.1,11.3,7,12,7s1.4,0.1,2,0.3C15.3,6,16.8,6,16.8,6C17,6.6,17,7.2,17,7.6c0,0.8-0.1,1.2-0.2,1.4c0.7,0.8,1.2,1.8,1.2,3 c0,2.2-1.7,3.5-4,4c0.6,0.5,1,1.4,1,2.3v3.3c4.1-1.3,7-5.1,7-9.5C22,6.1,16.9,1.4,10.9,2.1z" />
                                    </svg>
                                </a>
                            )
                        }

                        {
                            links?.website && (
                                <a
                                    class="ml-4 hover:scale-105 duration-200 font-medium text-lg text-black"
                                    target="_blank"
                                    href={links.website}
                                >
                                    Official Site
                                </a>
                            )
                        }
                    </div>

                    <div
                        class="border-b-2 border-gray-300 rounded-full w-full mt-4"
                    >
                    </div>
                </div>

                <div
                    class="project-content text-xl max-w-5xl pt-4 text-gray-800"
                >
                    <slot />
                </div>
            </div>
        </main>
        <Footer />
    </body>
</html>
